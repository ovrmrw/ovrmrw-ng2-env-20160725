{
  "compilerOptions": {
    "target": "es2015",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelOptions": {
      "presets": [
        "es2015"
      ],
      "plugins": [
        "babel-plugin-espower"
      ]
    },
    "useCache": true,
    "useWebpackText": true,
    "doTypeCheck": false
  }
}